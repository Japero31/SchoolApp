@model IEnumerable<PoliSchool.Web.Models.InstructorListModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Instructores</h2>

<p>
    <a asp-action="Create">Nuevo instructor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Nombre
            </th>
            <th>
                Fecha de Creación
            </th>
            <th>
                Fecha de Contratación
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDateDisplay)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
            </td>
        </tr>
}
    </tbody>
</table>
