@model PoliSchool.Web.Models.OnsiteCourseListModel

@{
    ViewData["Title"] = "Details";
}

<h3>Detalles</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Codigo de Curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class = "col-sm-2">
            Ubicacion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            Dias
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Days)
        </dd>
        <dt class = "col-sm-2">
           Tiempo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
  
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.CourseId }) |
    <a asp-action="Index">Regresar</a>
</div>
