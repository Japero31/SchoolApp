@model IEnumerable<PoliSchool.Web.Models.DepartmentListModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Departamentos</h2>

<p>
    <a asp-action="Create">Agregar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Departamento
            </th>
            <th>
                Presupuesto
            </th>
            <th>
                Administrador
            </th>
            <th>
                Fecha de Inicio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrator)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateDisplay)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.DepartmentId }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.DepartmentId }) |
            </td>
        </tr>
}
    </tbody>
</table>
